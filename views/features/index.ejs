<%- include("../shared/_header") %>

<div class="container mt-5">
    <h1>Features List</h1>
    <hr class="my-5">
    <a href="/features/new">Create a new feature</a>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Content</th>
                <th>Last Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (features && features.length > 0) { %>
                <% features.forEach(({ id, content, updatedAt }) => { %>
                    <tr>
                        <td><%= content %></td>
                        <td><%= updatedAt %></td>
                        <td>
                            <a href="/features/<%= id %>/edit">edit</a> | 
                            <form action="/features/<%= id %>" method="post" onsubmit="return confirm('Are you sure you want to delete this feature?')">
                                <input type="hidden" name="_method" value="delete">
                                <button class="standard-link" type="submit">delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            <% } %>
        </tbody>
    </table>
</div>

<%- include("../shared/_footer") %>
